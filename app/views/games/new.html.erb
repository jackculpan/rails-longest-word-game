<h1>New game</h1>
<p>Find me in app/views/games/new.html.erb</p>

<% @letters.each do |letter| %>
<p class="d-inline p-2 bg-primary text-white mb-5"><%=letter%></p>
<%end%>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token  %>
  <div class="form-group mt-5">
    <input type="text" name="answer" placeholder="Type your answer">
    <input type="text" name="letters" hidden="true" value="<% @letters %>">
    </div>
  <input type="submit" value="Submit!" class="btn btn-primary">
</form>
